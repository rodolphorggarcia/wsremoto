package br.com.universidadexyz.beans;

/*
 * Design Pattern => compilacao de padroes para projetos OO (boas praticas)
 * Um dos padroes é chamado de DTO (Data Transfer Object)
 * 1° Todos atributos devem ser privados
 * 2° Cada atributo deve possuir um metodo de input(set) e um metodo de output(get)
 * 3°         
 * 4°
 * 5°
 * 6°
 * 7° 
 * */

public class Aluno {
	
	private int rm;
	private String nome;
	private String cpf;
	
	public void preencherRm(int pRm) {
		rm=pRm;
	}
	public int retornarRm() {
		return rm;
	}
	public void preencherNome(String pNome) {
		nome=pNome.toUpperCase();
	}
	public String retornarNome() {
		return nome;
	}
	public void preencherCPF(String pCPF) {
		cpf=pCPF;
	}
	public String retornarCPF() {
		return cpf;
	}

}
