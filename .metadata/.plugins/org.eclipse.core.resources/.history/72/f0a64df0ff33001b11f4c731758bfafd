package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
		int ano = Integer.parseInt(JOptionPane.showInputDialog("ANO:"));
		while(ano < 1900) {
			ano = Integer.parseInt(JOptionPane.showInputDialog("Digite um ano maior ou igual a  1900"));
		}
		int mes = Integer.parseInt(JOptionPane.showInputDialog("MES:"));
		while(mes < 1 && mes > 12) {
			mes = Integer.parseInt(JOptionPane.showInputDialog("Digite um mês de 1 a 12"));
		}
		int dia = Integer.parseInt(JOptionPane.showInputDialog("DIA:"));
		while(dia < 1 && dia > 31) {
			dia = Integer.parseInt(JOptionPane.showInputDialog("Digite um dia entre 1 e 31"));
		}
		
		System.out.println("Data: " + dia + "/" + mes + "/"+ ano);
		

	}

}
