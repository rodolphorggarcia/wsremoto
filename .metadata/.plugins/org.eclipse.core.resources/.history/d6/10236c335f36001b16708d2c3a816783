public class ImplementarTestes {

	public static void main(String[] args) {
		
		
		char opcao = Magic.s("Digite P para poupança").charAt(0);
		Conta conta =null;
		
		if(opcao=='P') {
			conta = new Poupanca();
			System.out.println(conta.getSaldo());
			conta.depositar(100);
			System.out.println(conta.getSaldo());
			conta.setRendimento(20);
			ystem.out.println(conta);
		}
		else {
			conta = new Corrente();
		}

	}

}
